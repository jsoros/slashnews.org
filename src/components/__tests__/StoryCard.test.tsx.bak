      render(
        <StoryCard
          story={mockStory}
          viewMode="full"
          expandedStory={null}
          onToggleComments={mockOnToggleComments}
            onHideArticle={mockOnHideArticle}
        />
      );

      const articleLink = screen.getByRole('link', { name: 'View Article' });
      expect(articleLink).toHaveAttribute('target', '_blank');
