      expect(screen.queryByRole('button', { name: /comments/ })).not.toBeInTheDocument();
    });

    it('shows summary loading state in compact view', () => {
      render(
        <StoryCard
          story={mockStory}
          viewMode="compact"
          expandedStory={null}
          loadingSummary={true}
          onToggleComments={mockOnToggleComments}
            onHideArticle={mockOnHideArticle}
        />
