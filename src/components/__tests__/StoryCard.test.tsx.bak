      expect(screen.getByText(/ðŸ“š Test Story Title/)).toBeInTheDocument();
    });

    it('shows comment icon for stories without URL', () => {
      const askStory = { ...mockStory, url: undefined };
      render(
        <StoryCard
          story={askStory}
          viewMode="full"
          expandedStory={null}
